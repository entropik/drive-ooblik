# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=drive_ooblik
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=4h
JWT_ADMIN_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5

# SMTP Configuration (default values, will be overridden by database config)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# S3 Configuration (default values, will be overridden by database config)
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=eu-west-1
S3_BUCKET=your-bucket-name

# hCaptcha
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Session Configuration
SESSION_DURATION_HOURS=4
MAGIC_LINK_EXPIRY_HOURS=6

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log